{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "A full-stack MERN ecommerce application with Redux Toolkit and Material UI",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "seed": "cd backend && npm run seed"
  },
  "keywords": ["mern", "ecommerce", "react", "node", "mongodb", "redux"],
  "author": "Amarjot Singh",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmarjotSingh/mern-ecommerce"
  }
}
